#!/bin/bash -xe

SVG_BRANCH=master
SVG_DIR=quicksvg
if [ ! -d $SVG_DIR ]; then
(
    git clone https://github.com/opentable/QuickSVG $SVG_DIR
    cd $SVG_DIR; git checkout $SVG_BRANCH; git pull
    if [  -f ../xcode6.patch ]; then
    	git apply ../xcode6.patch
    fi 
)
else
(
    cd $SVG_DIR
    git checkout $SVG_BRANCH; git pull
)
fi


